<Application x:Class="NewsDashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NewsDashboard"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Themes/LightTheme.xaml"/>
                <ResourceDictionary Source="Styles/DataTemplates/PreferenceTemplates.xaml"/>
                <ResourceDictionary Source="Styles/CommonStyling.xaml"/>
                <ResourceDictionary Source="ValueConverters/ValueConverters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
